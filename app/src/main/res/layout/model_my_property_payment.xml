<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <TableLayout
        android:id="@+id/tbl_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/black"
        android:gravity="center"
        android:stretchColumns="0,1,2,3,4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#000">

            <TextView
                android:id="@+id/tv_pay_date"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Text"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_pay_transId"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Text"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_pay_debit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Text"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_pay_credit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_margin="1dp"
                android:background="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Text"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_pay_balance"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_margin="1dp"
                android:background="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Text"
                android:textColor="@color/white" />
        </TableRow>


    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbl_ll" />
    <TextView
        android:id="@+id/tv_pay_remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Remarks:"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbl_ll" />

    <TextView
        android:id="@+id/tv_payment_remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Remarks:"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_remarks" />


</androidx.constraintlayout.widget.ConstraintLayout>